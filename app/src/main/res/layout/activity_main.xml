<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Choose the animal you like the most!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:src="@drawable/welcomerobot"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="Click a button to select an Animal you want a picture of!- no animals was harmed doing this project lol"
            android:backgroundTint="#123456"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/dogBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:text="Dog"
            android:backgroundTint="#123456"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/catBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:text="Cat"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#123456"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/owlBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:text="Owl"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#123456"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/deerBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:text="Deer"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#123456"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/Act3btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:text="GO TO THIRD ACTIVITY"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#123456"
            android:textColor="@color/white"/>



    </LinearLayout>
</LinearLayout>